doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="/public/css/styles.css")
    body
        header
            h1 Noom
        main
            div#nickName 
                h3 Choose your Nickname!
                form
                    input(type="text" placeholder="Nickname" required)
                    button Save
            div#call
                h3
                div#video
                    div.video__wrap
                        video#myFace(autoplay playsinline width="400" height="350")
                        video#peerFace(autoplay playsinline width="400" height="350")
                    ul#chatList
                div.video__controller
                    button#muteBtn Mute
                    button#cameraBtn Turn Camera Off
                    select#cameraList
                div#chat
                    form 
                        input(type="text" placeholder="Write a Message" required)
                        button Send
                button#leave Leave    
            div#welcome 
                form
                    input(type="text" placeholder="Room Name" required)
                    button Enter
                span Oepn Room
                ul
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 